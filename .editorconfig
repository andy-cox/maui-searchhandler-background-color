# EditorConfig provides a consistent editor experience across team members.
# See: https://EditorConfig.org

# Prevent this config from inheriting properties
root = true

# General styles
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Configuration files
[*.{config,csproj,json,props,xml,yml}]
indent_size = 2

# Unix shell files
[*.{sh}]
end_of_line = lf
